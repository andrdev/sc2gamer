        <item name="android:textSize">@dimen/pager_tab_name_text</item>
    </style>
    <style name ="DialogAlarmTeamNameStyle" parent="DefTextStyle">
        <item name="android:layout_marginTop">@dimen/dialog_alarm_team_marginTop</item>
